---
export interface Props {
  class?: string
}

import { Image } from '@astrojs/image/components'
import home from '../images/home.png'

const { class: className } = Astro.props
---

<a href="/" class:list={['home-link', className]}>
  <Image src={home} alt="tillbaka till startsidan" />
</a>

<style>
  .home-link {
    position: absolute;
    z-index: 1;
    width: 80px;
  }
  .home-link img {
    object-fit: contain;
    max-width: 100%;
    max-height: 100%;
    height: auto;
    width: 100%;
  }
</style>
